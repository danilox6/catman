<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cm="urn:import:it.unisannio.catman.common.client.widget"
	xmlns:my="urn:import:it.unisannio.catman.screens.inbox.client.widget">
	<ui:style>
		.background {
			background-color: #99C;
		}
	</ui:style>

	<g:DockPanel width="100%" ui:field="dock">
		<g:Dock direction="NORTH">
			<g:SimplePanel ui:field="northPanel" title="Title">
				<my:SearchMasterHeadWidget></my:SearchMasterHeadWidget>
			</g:SimplePanel>
		</g:Dock>
		<g:Dock direction="CENTER" width="100%">
			<g:ScrollPanel ui:field="centerScrollPanel" width="100%"></g:ScrollPanel>
		</g:Dock>
		<g:Dock direction="SOUTH">
			<g:SimplePanel ui:field="southPanel">
				<my:BottomMasterBar></my:BottomMasterBar>
			</g:SimplePanel>
		</g:Dock>
	</g:DockPanel>
</ui:UiBinder> 