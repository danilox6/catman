<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cm="urn:import:it.unisannio.catman.common.client.widget"
	xmlns:my="urn:import:it.unisannio.catman.screens.eventmanager.client.widget">
	<ui:style>
		.background {
			background-color: #99C;
		}
	</ui:style>

	<g:DockPanel width="100%" ui:field="dock">
		<g:Dock direction="NORTH">
			<g:SimplePanel ui:field="northPanel">
				<my:SearchMasterHeadWidget title="Event Manager"></my:SearchMasterHeadWidget>
			</g:SimplePanel>
		</g:Dock>
		<g:Dock direction="CENTER" width="100%">
			<cm:MasterItemListPanel width="100%"
				ui:field="masterItemList">
				
			</cm:MasterItemListPanel>
		</g:Dock>
		<g:Dock direction="SOUTH">
			<g:SimplePanel ui:field="southPanel">
				<my:MasterBottomBarWidget></my:MasterBottomBarWidget>
			</g:SimplePanel>
		</g:Dock>
	</g:DockPanel>
</ui:UiBinder> 