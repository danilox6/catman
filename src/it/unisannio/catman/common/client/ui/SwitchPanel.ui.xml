<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.left {
			float: left;
		}

		.right {
			float: right;
		}
		
		.container {
			overflow: hidden;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.container}">
	    <g:SimplePanel ui:field="left" styleName="{style.left}"></g:SimplePanel>
	    <g:SimplePanel ui:field="right" styleName="{style.right}"></g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 