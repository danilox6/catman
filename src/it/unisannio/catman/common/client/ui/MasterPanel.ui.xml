<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	    .container {
			position: absolute;
			width: 100%;
			top: 0;
			left: 0;
			bottom: 0;
			right: 0;			
		}
		
		.header {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 30px;
			border-bottom: 1px #ccc solid;
		}
		
		.footer {
			position: absolute;
			bottom: 0;
			left: 0;
			right: 0;
			height: 30px;
			border-top: 1px #ccc solid;
		}
		
		.content {
			position: absolute;
			top: 30px;
			bottom: 30px;
			left: 0;
			right: 0;
		}
	</ui:style>
	
	<g:HTMLPanel>
	    <div class="{style.container}">
	    	<div class="{style.header}"><g:SimplePanel ui:field="header"></g:SimplePanel></div>
	    	<div class="{style.content}"><g:ScrollPanel ui:field="content"></g:ScrollPanel></div>
	    	<div class="{style.footer}"><g:SimplePanel ui:field="footer"></g:SimplePanel></div>
	    </div>
	</g:HTMLPanel>
</ui:UiBinder> 