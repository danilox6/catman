<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style
		type='it.unisannio.catman.common.client.ui.MasterPanel.MasterPanelStyle'>
		.container {
		position: absolute;
		width: 100%;
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
		}

		.header {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 73px;
		background: #eee;
		border-bottom: 3px #ddd solid;
		display: table;
		width: 100%;
		overflow:hidden;
		border-collapse: separate;
		box-sizing: border-box;
		padding: 10px;
		padding-left: 15px;
		}
		
		.header h3 {
			margin: 0;
			line-height:30px;
			color: #999;
			text-shadow: -1px -1px #fff;
		}

		.footer {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 30px;
		background: #efefef;
		border-top: 2px #dedede solid;
		}

		.content {
		position: absolute;
		top: 50px;
		bottom: 30px;
		left: 0;
		right: 0;
		}
		
	</ui:style>

	<g:HTMLPanel>
		<div class="{style.container}">
			<g:SimplePanel ui:field="header" styleName="{style.header}"></g:SimplePanel>
			
			<div class="{style.content}">
				<g:SimplePanel ui:field="content"></g:SimplePanel>
			</div>
			<div class="{style.footer}" ui:field="footerDiv">
				<g:SimplePanel ui:field="footer"></g:SimplePanel>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 