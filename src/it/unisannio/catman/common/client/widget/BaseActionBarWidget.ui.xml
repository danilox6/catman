<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.border {
			border: 1px solid Black;
		}
	</ui:style> 
	<g:HorizontalPanel width="100%" styleName='{style.border}'>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:HorizontalPanel ui:field="leftPanel" width="100%"> 
			</g:HorizontalPanel>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:HorizontalPanel ui:field="rightPanel">
			</g:HorizontalPanel>
		</g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 