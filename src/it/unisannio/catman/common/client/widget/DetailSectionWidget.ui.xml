<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title {
			font-weight: bold;
		}
		.margin{
			margin-bottom: 2px;
		}
		.vlpadding {
			padding-left: 4px;
		}
	</ui:style>
	<g:VerticalPanel width="100%" styleName="{style.margin}">
		<g:Label ui:field="titleLabel"  styleName="{style.title}" ></g:Label>
	<g:VerticalPanel ui:field="contentPanel" width="100%" styleName="{style.vlpadding}"></g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 